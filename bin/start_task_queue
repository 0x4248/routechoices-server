#!/usr/bin/env bash
DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
BASEDIR=$(dirname $DIR)
PID_FILE=${BASEDIR}/var/tasks.pid

if [ -f $PID_FILE ];
then
 pid=`cat $PID_FILE`
 echo "checks PID $pid"
 if ps -p $pid > /dev/null 2>&1
 then
  echo "already running"
 else
  echo "starting"
  nohup ${BASEDIR}/env/bin/python ${BASEDIR}/manage.py process_tasks > ${BASEDIR}/logs/tasks.log 2> ${BASEDIR}/logs/tasks.error.log &
  echo $! > $PID_FILE
 fi
else
 echo "starting"
 nohup ${BASEDIR}/env/bin/python ${BASEDIR}/manage.py process_tasks > ${BASEDIR}/logs/tasks.log 2> ${BASEDIR}/logs/tasks.error.log &
 echo $! > $PID_FILE
fi
