#!/usr/bin/env bash
DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
BASEDIR=$(dirname $DIR)
PID_FILE=${BASEDIR}/var/tornado.pid
CMD=nohup ${BASEDIR}/env/bin/python ${BASEDIR}/manage.py run_tcp_server --cpu=1 > ${BASEDIR}/log/tornado.log 2> ${BASEDIR}/log/tornado.error.log &
if [ -f $PID_FILE ];
then
 pid=`cat $PID_FILE`
 echo "checks PID $pid"
 if ps -p $pid > /dev/null 2>&1
 then
  echo "already running"
 else
  echo "starting"
  $CMD
  echo $! > $PID_FILE
 fi
else
 echo "starting"
 $CMD
 echo $! > $PID_FILE
fi
